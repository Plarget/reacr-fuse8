@import "@/shared/styles/mixin.pcss";

.input {
  height: 64px;
  width: 100%;
  box-shadow: var(--box-shadow-normal);
  padding-inline: 36px;
  color: var(--color-purple);
  font-size: 20px;
  font-weight: 700;

  @media (max-width: 480px) {
    font-size: 18px;
    padding-inline: 20px;
    height: 50px;
  }

  &::placeholder {
    color: var(--color-purple);
  }
}